<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.YTAudio.DayNight" parent="Theme.YTAudio" />

    <style name="Theme.YTAudio" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/yta_blue_700</item>
        <item name="colorPrimaryVariant">@color/yta_blue_800</item>
        <item name="colorSecondary">@color/yta_orange_500</item>
        <item name="colorSecondaryVariant">@color/yta_orange_400</item>

        <item name="android:colorBackground">@color/yta_blue_50</item>
        <item name="colorSurface">@color/yta_white_50</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>
        <item name="colorError">@color/yta_red_400</item>

        <item name="colorOnPrimary">@color/yta_white_50</item>
        <item name="colorOnSecondary">@color/yta_black_900</item>
        <item name="colorOnBackground">@color/yta_black_900</item>
        <item name="colorOnSurface">@color/yta_black_900</item>
