        <item name="android:navigationBarColor">@color/nav_bar</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.YTAudio.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.YTAudio.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.YTAudio.LargeComponent</item>

        <item name="textAppearanceHeadline2">@style/TextAppearance.YTAudio.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.YTAudio.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.YTAudio.Headline4</item>
