<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="300"
        motion:motionInterpolator="linear">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:maxAcceleration="200"
            motion:touchAnchorId="@+id/thumbnail_container"
            motion:touchAnchorSide="bottom" />

        <KeyFrameSet>
            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="10"
                motion:motionTarget="@id/thumbnail"
                motion:percentWidth="0"
                motion:percentX="0" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="10"
                motion:motionTarget="@id/thumbnail_container"
                motion:percentWidth="0" />

            <KeyPosition
                motion:curveFit="linear"
                motion:framePosition="90"
                motion:motionTarget="@id/controller_container"
                motion:percentWidth="0" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@id/current_progress" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@id/play_pause_button" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@id/duration" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@id/end">
        <Constraint
            android:id="@id/thumbnail_container"
            android:layout_width="0dp"
            android:layout_height="320dp"
            motion:layout_constraintDimensionRatio="H,3:4"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="@android:color/transparent" />
        </Constraint>

        <Constraint
            android:id="@id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/thumbnail_container"
            motion:layout_constraintEnd_toEndOf="@id/thumbnail_container"
            motion:layout_constraintStart_toStartOf="@id/thumbnail_container"
            motion:layout_constraintTop_toTopOf="@id/thumbnail_container" />

        <Constraint
            android:id="@id/controller_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/thumbnail_container" />

        <Constraint android:id="@id/play_pause_button">
            <PropertySet motion:alpha="1" />
        </Constraint>

        <Constraint android:id="@id/current_progress">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@id/duration">
            <PropertySet android:alpha="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@id/start">
        <Constraint
            android:id="@id/thumbnail_container"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="65dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            motion:layout_constraintBottom_toBottomOf="@id/thumbnail_container"
            motion:layout_constraintDimensionRatio="H,1:2.5"
            motion:layout_constraintStart_toStartOf="@id/thumbnail_container"
            motion:layout_constraintTop_toTopOf="@id/thumbnail_container" />

        <Constraint
            android:id="@id/controller_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/thumbnail_container" />

        <Constraint
            android:id="@id/play_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            motion:layout_constraintBottom_toBottomOf="@id/thumbnail_container"
            motion:layout_constraintEnd_toEndOf="@id/thumbnail_container"
            motion:layout_constraintTop_toTopOf="@id/thumbnail_container" />

        <Constraint android:id="@id/current_progress">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@id/duration">
            <PropertySet android:alpha="0" />
        </Constraint>
    </ConstraintSet>
</MotionScene>